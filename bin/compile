#!/bin/sh

set -e
BUILD_DIR=$1

cd $BUILD_DIR

git clone https://github.com/MediaArea/ZenLib
cd ZenLib/Project/GNU/Library
./autogen.sh
echo "-----> CONFIGURE"
./configure
echo "-----> MAKE"
make
make install

wget https://launchpad.net/ubuntu/+archive/primary/+sourcefiles/mediainfo/17.12-1/mediainfo_17.12.orig.tar.gz
tar xvf mediainfo_17.12.orig.tar.gz
cd MediaInfo/Project/GNU/CLI
./autogen.sh
echo "-----> CONFIGURE"
./configure
echo "-----> MAKE"
make
make install